<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFCC00"
    tools:context=".RiderPhoneActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="#000"
            android:text="@string/africa"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:textColor="#000"
            android:text="@string/phone"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/etPhone"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg"
            android:inputType="phone"
            android:lineSpacingExtra="9sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="+249"
            android:textColor="@color/postTextColor"
            android:textColorHint="@color/inputFieldTextColor"
            android:textSize="14sp" />

        <Button
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:text="Send"
            android:textColor="@color/postBackgroundColor"
            android:fontFamily="@font/swissra_normal"
            android:textSize="14sp"
            android:background="@drawable/btn_bg"
            android:id="@+id/btn_login"/>



    </LinearLayout>

</LinearLayout>